<div class="container">
<h1>Bikes</h1>
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-12  col-md-6 col-lg-3">
        <div class="card m-2">
          <%= cl_image_tag bike.photo.key , class: "card-img-top" %>
          <div class="card-body-infos">
            <div>
              <h4><%= bike.name  %></h4>
              <p><%= bike.category  %></p>
            </div>
            <% if bike.owner.avatar.attached? %>
              <%= cl_image_tag bike.owner.avatar.key, class: "card-body-user avatar-bordered" %>
            <% end %>
            <h4 class="card-body-pricing"><%= humanized_money_with_symbol(bike.price) %></h4>
        </div>
            <%= link_to "", bike_path(bike), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'back', root_path %>
</div>
<small>Reload page to get updated map display</small>
  <div id="map"
       style="width: 100%; height: 600px; border-radius: 16px; background: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4));"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
