<div class="container">
<h1>Bikes</h1>
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-12  col-md-6 col-lg-3">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path bike.photo.key, height: 300, width: 400, crop: :fill %>')">

        <%= bike.name  %>
        <%= bike.category  %>
        <p>Amount: <%= humanized_money_with_symbol(bike.price) %></p>
        </div>
        <%= link_to "", bike_path(bike), class: 'card-link' %>
      </div>
    <% end %>
  </div>

</div>
