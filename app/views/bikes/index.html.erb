<div class="container">
<h1>Bikes</h1>
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-12  col-md-6 col-lg-3">
        <div class="card">
          <%= cl_image_tag bike.photo.key , class: "card-img-top" %>
          <div class="card-body">

          <%= bike.name  %>
          <%= bike.category  %>
          <p>Amount: <%= humanized_money_with_symbol(bike.price) %></p>
          <%= link_to "", bike_path(bike), class: 'card-link' %>
        </div>
        <%= cl_image_tag bike.owner.avatar.key, class: "avatar" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
