<h1>Bikes#new</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <h4>Add your Bike here:</h4>
      <%= simple_form_for [@bike], remote: true do |f|  %>
        <%= f.input :name, label: 'What is your bike\'s name?' %>
        <%= f.input :sku, label: 'What is the SKU?' %>
        <%= f.input :category, label: "What's the category of the bike?"  %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Add your bike!", class: "btn btn-primary"%>
      <% end %>
    <%= link_to "back", bikes_path %>
    </div>

  </div>
</div>
