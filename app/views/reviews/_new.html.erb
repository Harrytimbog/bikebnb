<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for [bike, review], remote: true do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate the write up" %>
        <%= f.submit "Save your review", class: "btn btn-outline-info" %>
      <% end %>
    </div>
  </div>
</div>
